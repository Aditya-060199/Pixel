<%- include ("./partials/header") %>
<div class = "signuppage">
<div id = "signupicon">
<h3><span class="fas fa-user-plus"></span></h3>
</div>
<div class = "signupform">
<div id = "headingpara">
Join Pixel now and share your stories with others!
</div>
<div id = "facebookbtn">
<button class = "btn btn-lg fbbutton"><a href="/auth/facebook" class="fab fa-facebook"><span id = "fb">Sign In with <strong>Facebook</strong></span></a></button>
</div>
<div id = "googlebutton">
<button class="btn btn-lg googlebtn"><a href="/auth/google" class="fab fa-google"><span id = "ge">Sign In with <strong>Google</strong></span></a></button>
</div>
<h2 class="hrule"><span><em>or</em></span></h2>
<form action="/signup" method="POST">
<div id="useremail">
<label>Email</label><br />
<input type = "email" name = "username" class="signupemail" required><br />
</div>
<div id="userpassword">
<label>Password</label><br />
<input type="password" name="password" class="signuppassword" required><br />
</div>
<button type="submit" class="btn btn-lg btn-primary createbutton">Create Account</button>
</form>
<div id = "haveaccount">
<label>Already have an account?<strong><a href = "#">Log In</a></strong></label>
</div>
</div>
</div>
<%- include ("./partials/footer") %>
